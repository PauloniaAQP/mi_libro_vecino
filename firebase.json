{
  "firestore": {
    "rules": "./mi_libro_vecino_api/firebase_conf/firestore.rules",
    "indexes": "./mi_libro_vecino_api/firebase_conf/firestore.indexes.json"
  },
  "hosting": {
    "public": "./build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "./mi_libro_vecino_api/firebase_conf/storage.rules"
  }
}
